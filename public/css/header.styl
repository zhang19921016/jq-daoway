.header
  width 100%
  background #fff
  border-bottom 1px solid #e5e5e5
  .navs
    width 100%
    height 40px
    background #f1f1f1
    .inner
      width 1170px
      height 40px
      margin 0 auto
      li
        float right
        height 40px
        text-align center
        padding-left 0
        &:hover
          background #fff
          a
            color #e94840
        &:first-child
          float left
          a
            display flex
            justify-content space-between
            span
              display inline-block
              margin-right 5px
              color #000
              &.i
                color: #898989
        a
          display inline-block
          height 40px
          padding 10px 15px
          text-align center
          line-height 20px
          color #000
          &.active
            color #e94840
  .search
    width 100%
    height 90px
    opacity 0.5
    .inner
      width 1170px
      height 90px
      margin 0 auto
      display flex
      justify-content space-between
      position relative
      .s-left
        line-height 90px
        padding-left 20px
        img
          width 280px
          height 40px
          transform translateY(40%)
      .s-mid
        position: absolute
        top 0
        bottom 0
        left 100px
        right 0
        width 600px
        margin auto
        height 38px
        line-height 34px
        border 2px solid #e94840
        border-radius 4px
        font-size 14px
        background #fff
        .icon-sousuo
          font-weight 400
          color #999
          font-size 14px
          position relative
          top 1px
          left 20px
        input
          width 70%
          border none
          height 30px
          outline none
          padding-left 30px
        span
          width 20%
          text-align center
          background-color: #e94840
          color #fff
          float right
          height 34px
          cursor pointer
      .s-right
        width 90px
        height 90px
        position: absolute;
        right 0
        top 0
        z-index 100
        img
          width 100%
          height 100%
      .triangle
        border 1px solid #ccc
        width 12px
        height 12px
        position absolute
        top -5px
        right 40px
        background #fff
        transform rotate(45deg)
        z-index 90
.maskHide
  position fixed
  left 0
  top 0
  z-index 20