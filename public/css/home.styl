body
  color #333
  font 14px/1.14 "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", tahoma, arial, simsun, "宋体"
  #wrap
    width 100%
    .middle
      width 100%
      height 300px
      position relative
      .carousel
        width 100%
        height 100%
        .swiper-container
          widht 100%
          height 300px
          .swiper-wrapper
            .swiper-slide
              width 100% !important
              float left
              height 300px
              overflow hidden
              text-align center
              img
                width 100%
                height 100%
      .menu
        width 180px
        height 300px
        position absolute
        left 200px
        top 0
        z-index 10
        .myLi
          height 30px
          line-height 30px
          color #fff
          font-size 16px
          position relative
          font-weight bold
          cursor pointer
          padding-left 45px
          background: #757881
          img
            margin-left 25px
          .triangle
            margin-left 33px
            display none

      .mask
        position absolute
        height 300px
        left 390px
        z-index 10
        top 0
        width 160px
        margin-top 0
        ul
          position absolute
          left 0
          top 0
          width 100%
          height 100%
          background rgba(255,255,255,0.3)
          display none
          li
            height 30px
            line-height 30px
            color #000
            font-size 16px
            position relative
            font-weight bold
            cursor pointer
            padding-left 30px
            overflow hidden

    .lists
      width 100%
      margin-top 50px
      .module
        width 1200px
        margin 0 auto
        padding-bottom 20px
        overflow visible
        min-height 600px
        .servicebody
          width 100%
          &>div
            position relative
            .title
              color #3d3838
              font-weight 800
              font-size 28px
              font-family "Microsoft YaHei"
              text-align center
            .serviceType
              font-size 22px
              margin-top 15px
              text-align center
              li
                display inline-block
                color #3d3838
                background-color transparent
            .lookMore
              position absolute
              bottom 5px
              right 0
              color #898989
              font-size 18px
              font-family "幼圆"
          .content
            argin-top 10px
            margin-left 0
            margin-right 0
            display flex
            justify-content space-between
            li
              padding 10px
              width 230px
              border 1px solid #eaeaea
              margin 0 5px
              background #fff
              cursor pointer
              height 345px
              img
                width 210px
                height 210px
              .title
                font-size 16px
                padding 10px 0
                font-weight 800
                color #000
                height 28px
                line-height 14px
                overflow hidden
                width 101%
                white-space nowrap
                text-overflow ellipsis
              .drc
                color #929292
                padding 5px 0
                overflow hidden
                text-overflow ellipsis
                display -webkit-box
                -webkit-line-clamp 2
                -webkit-box-orient vertical
                word-break break-all
                font-size 13px
                line-height 18px
                height 58px
              .price
                font-size 14px
                padding 5px 5px
                font-weight 600
                height 20px
                color #fb474f
                margin-top -14px
                .btn
                  float right
                  padding 0
                  width 76px
                  height 24px
                  text-align center
                  background #fb474f
                  border-radius 5px
                  color #fff
                  font-size 14px
        .fws
          width 1192px
          line-height 32px
          padding 10px
          border 1px solid #e5e5e5
          margin 20px auto 0
          text-align justify
          a
            margin 0 6px
            color #3d3838
            &:first-child
              margin-left 0

